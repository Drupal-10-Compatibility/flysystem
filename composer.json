{
    "name": "drupal-10-compatibility/flysystem",
    "description": "Drupal 10 Compatibility:  FlySystem",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://www.drupal.org/project/flysystem",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "require": {
        "composer/installers": "^1.9",
        "cweagans/composer-patches": "^1.7",
        "drupal/core": "^10.0",
        "drupal/core-composer-scaffold": "^10.1",
        "drupal/core-recommended": "^10.1",
        "drupal/flysystem": "2.1.x-dev",
        "drush/drush": "^11.0",
        "league/flysystem-memory": "^1.0",
        "oomphinc/composer-installers-extender": "^2.0",
        "wikimedia/composer-merge-plugin": "^2.0"
    },
    "require-dev": {
        "drupal/core-dev": "^10.1",
        "phpcompatibility/php-compatibility": "8.1.0",
        "phpstan/phpstan-deprecation-rules": "^1.0"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "8.1 as 7.0"
        },
        "allow-plugins": {
            "drupal/core-composer-scaffold": true,
            "composer/installers": true,
            "wikimedia/composer-merge-plugin": true,
            "oomphinc/composer-installers-extender": true,
            "phpstan/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "cweagans/composer-patches": true
        }
    },
    "extra": {
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "drupal-scaffold": {
            "file-mapping": {
                "[web-root]/robots.txt": false,
                "[web-root]/.ht.router.php": false,
                "[web-root]/example.gitignore": false,
                "[web-root]/.htaccess": false,
                "[web-root]/INSTALL.txt": false,
                "[web-root]/LICENSE.txt": false,
                "[web-root]/README.txt": false,
                "[web-root]/web.config": false
            },
            "initial": {
                "sites/default/default.services.yml": "web/sites/default/default.services.yml",
                "sites/default/default.settings.php": "web/sites/default/default.settings.php",
                "robots.txt": "web/robots.txt",
                ".htaccess": "web/.htaccess"
            },
            "omit-defaults": true,
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-types": [
            "component",
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library",
                "type:npm-asset",
                "type:bower-asset"
            ]
        },
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "patches": {
            "drupal/flysystem": {
                "Issue #3227240: Use a different package for stream wrapper support": "https://git.drupalcode.org/project/flysystem/-/merge_requests/27/diffs.diff"
            },
            "phpcompatibility/php-compatibility": {
                "Fixing php 8.1 compatibility issue swith php-compatibility-sniffer":"patches/php-compatibility-sniffer-8.1-patch.patch"
            }
        }
    },
    "scripts": {
        "post-install-cmd": [],
        "post-update-cmd": []
    }
}
